<MudLayout>

    <div class="docs-section-content-inner relative d-flex flex-grow-1 flex-wrap justify-center align-center" style="position: fixed; left: 0; right: 0;top:10px; z-index: 999; color:#FFE082;">
        <!-- Nội dung thanh menu -->
        <MudButton Href="products" match="NavLinkMatch.Prefix" StartIcon="@Icons.Material.Filled.Home">Trang chủ</MudButton>

        <MudMenu class="btn-close-black" Label="Bộ sưu tập" EndIcon="@Icons.Material.Filled.KeyboardArrowDown" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
            <MudMenuItem Href="/vn" match="NavLinkMatch.Prefix">Văn học Việt Nam</MudMenuItem>
            <MudMenuItem Href="/nn">Văn học Nước ngoài</MudMenuItem>
            <MudMenuItem Href="/tt">Truyện tranh</MudMenuItem>
            <MudMenuItem Href="/ngoaingu">Sách Ngoại ngữ</MudMenuItem>
            <MudMenuItem Href="/ct">Sách Chính trị</MudMenuItem>
        </MudMenu>

        <MudButton Variant="Variant.Text" Href="gioithieu" Match="NavLinkMatch.Prefix">Giới thiệu</MudButton>


    </div>
    <div class="docs-section-content-inner relative d-flex flex-grow-1 flex-wrap justify-center align-center" style="position: fixed;top:10px;  right: 70px; z-index: 999; color:#FFE082;">


        <NavLink href="cart">
            <eShop.Web.CustomerPortal.Controls.CartComponent>

            </eShop.Web.CustomerPortal.Controls.CartComponent>
        </NavLink>


        <a href="admin">Admin</a>
        <AuthorizeView>
            <Authorized>
                <MudButton Href="/logout">Đăng xuất</MudButton>
                <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
                    <MudDrawerHeader>
                        <MudText Typo="Typo.h6">test</MudText>
                    </MudDrawerHeader>
                </MudDrawer>
            </Authorized>
        </AuthorizeView>

    </div>

</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
