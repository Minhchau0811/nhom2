<div class="mb-3 row">
        <label for="filter" >Tìm kiếm:&nbsp;</label>
    <div class="col-auto">
        <input type="text" class="form-control" id="filter" @bind-value="filter" />
    </div>   
    <div class="col-auto">
        <button type="button" class="btn btn-primary mb-2" @onclick="HandleSearch">Tìm kiếm</button>
    </div >
</div>

@code {
    private string filter;

    [Parameter]
    public EventCallback<string> OnSearch{ get; set; }

    private void HandleSearch()
    {
        OnSearch.InvokeAsync(filter);
    }
}
