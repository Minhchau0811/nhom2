@page "/themsp"
@attribute [Authorize]
@inject NavigationManager navigationManager



<br/>
<div class="container">
    <div class="justify-content-center">
           <h3>THÊM SẢN PHẨM</h3>
        <div class="card" style="width: 1150px; height: auto;left:70px; background:#FFE0B2 ">
            <br />

            <br />
            <div class="card" style="left:55px; width: 1000px; border:0; background:#FFE0B2">
            @if (product != null)
            {
                <EditForm Model="product" OnValidSubmit="HandleValidSubmit" class="form-line">
                    <DataAnnotationsValidator></DataAnnotationsValidator>
                    <ValidationSummary></ValidationSummary>

                    <div class="form-group">
                        &nbsp;&nbsp;&nbsp; <label for="id">Id</label>
                         <InputNumber id="id" @bind-Value="product.ProductId" class="form-control"></InputNumber>
                    </div>
                    <div class="form-group">
                        &nbsp;&nbsp;&nbsp; <label for="id">Brand</label>
                        <InputText id="brand" @bind-Value="product.Brand" class="form-control"></InputText>
                    </div>
                    <div class="form-group">
                        &nbsp;&nbsp;&nbsp;<label for="name">Name</label>
                        <InputText id="name" @bind-Value="product.Name" class="form-control"></InputText>
                    </div>
                    <div class="form-group">
                        &nbsp;&nbsp;&nbsp; <label for="price">Price</label>
                        <InputNumber id="price" @bind-Value="product.Price" class="form-control"></InputNumber>
                    </div>
                    <div class="form-group">
                        &nbsp;&nbsp;&nbsp; <label for="imagelink">Image Link</label>
                        <InputText id="imagelink" @bind-Value="product.ImageLink" class="form-control"></InputText>
                    </div>
                    <div class="form-group">
                        &nbsp;&nbsp;&nbsp;<label for="description">Description</label>
                         <InputText id="description" @bind-Value="product.Description" class="form-control"></InputText>
                    </div>
                    <br> 
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<button type="submit" class="btn btn-primary">THÊM</button>
                </EditForm>
            }
                <br />
            </div>
        </div>         
    </div>
    <br />
</div>



@code {
    private ProductRequire product;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        product = new ProductRequire();
    }
    private void HandleValidSubmit()
    {
        navigationManager.NavigateTo($"/Them?Productid={product.ProductId}&Brand={product.Brand}&Name={product.Name}&Price={product.Price}&ImageLink={product.ImageLink}&Description={product.Description}"
        , true);
    }

}